@model PDFTOXLS.Models.Ex_user_new

@{
    ViewBag.Title = "ChangePassword";
  
}


<div class="row">
    <div class="col-sm-12 col-md-12 col-xs-12">

        <div class="col-xs-12 clearfix">
            <div class="paddingboth topbtmpadding clearfix">
                <h2 class="font-md">Change Password</h2>
                 @using (Ajax.BeginForm("SaveChangePassword", "User", new AjaxOptions { HttpMethod = "POST", OnBegin = "javascript:beforeloading();", OnSuccess = "javascript:OnlyLoadPage('/User/Profile')" }, new { enctype = "multipart/form-data" }))
                     {
                     
                

                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                <label>Enter Old Password <span class="required">*</span>:</label>
                                <input type ="password" id="OLDPASS" name="OLDPASS" class="form-control input-sm" />
                             @*   @Html.PasswordFor(m => m.PASS, new { @class = "form-control input-sm" })*@
                                @if (ViewBag.statusmsg != null)
                                {
                                    <div id="missmatch" class="errortxt">
                                        @ViewBag.statusmsg
                                    </div>
                                
                                
                                           
                                          <script type="text/javascript">
                                              jQuery(document).ready(function () {
                                                  jQuery("#missmatch").delay(3000).fadeOut("slow");
                                                  //jQuery("#showmsg").fadeOut().delay(800);

                                              });

                                          </script>
                                            
                                }
                               
                            </div>

                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                <label>Enter New Password <span class="required">*</span> :</label>

                                @Html.PasswordFor(m => m.PASS, new { @class = "form-control input-sm", id = "NewPass" })
                                <div>@Html.ValidationMessageFor(model => model.PASS)</div>

                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                <label>Enter Confirm New Password <span class="required">*</span>:</label>

                                @Html.PasswordFor(m => m.REPASSWORD, new { @class = "form-control input-sm", @onblur = "ChkPass();" })
                                <div>@Html.ValidationMessageFor(model => model.REPASSWORD)</div>



                            </div>
                        </div>

                    </div>
                    <input type="submit" class="btn btn-xs btn-primary" name="btnSubmit" value="Update" onclick="ChkPass()" />@*

                    <a class="btn btn-xs btn-default" href="@Url.Action("List", "User")">Cancel</a>*@

               }
            </div>
        </div>
    </div>

</div>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
 <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">

    function ChkPass() {

        var n = $("#NewPass").val();
        var m = $("#REPASSWORD").val();

        var msg = $("#form-control input-sm")[0];
        if (n !== m) {
            alertify.alert("Enter Same Password!");
            msg.style.display = "block";
            msg.style.color = "red";
            msg.innerHTML = " Enter Same Password";
            return;
        }
    }



</script>

